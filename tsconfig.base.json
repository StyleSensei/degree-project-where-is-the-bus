{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["esnext"],
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["./src/shared/*"]
		}
	}
}
