{
	"compilerOptions": {
		"target": "ES2017",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist-cron",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"noImplicitAny": true
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", ".next", "dist-cron"]
}
